@model IEnumerable<WebApplication1.Models.employee>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    <h2>Index</h2>
    <div style="float:right; display:inline-block">
        <div class="glyphicon glyphicon-plus addNew gi-2x" data-type="Employee"></div>
    </div>
</div>
<hr/>
<table class="table table-striped table-hover click" data-type="Employee">
    <tr class="success">
        <th>
            First name
        </th>
        <th>
            Last name
        </th>
        <th>
            Email
        </th>
        <th>
            Hire date
        </th>    
    </tr>

@foreach (var item in Model) {
    <tr class="active" data-id=@item.employee_id >
        <td>
            @Html.DisplayFor(modelItem => item.first_name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.last_name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.hire_date, "{0:d MMM yyyy}")
        </td>
    </tr>
}

</table>
