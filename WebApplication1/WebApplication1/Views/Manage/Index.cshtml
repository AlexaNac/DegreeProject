@model WebApplication1.Models.IndexViewModel
@{
    ViewBag.Title = "Account informations";
    ViewBag.Link = "https://www.linkedin.com/oauth/v2/authorization?response_type=code&client_id=867v0zbln7wqzu&redirect_uri=http://localhost:54480/Linkedin/Authentication&state=987654321&scope=r_basicprofile" ;
