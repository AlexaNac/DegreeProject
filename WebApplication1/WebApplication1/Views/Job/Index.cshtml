@model IEnumerable < WebApplication1.Models.job>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    <h2>Index</h2>
    <div style="float:right; display:inline-block">
        <div class="glyphicon glyphicon-plus addNew gi-2x" data-type="Job"></div>
    </div>
</div>
<table class="table table-striped table-hover " data-type="Job" >
    <tr class="success">
        <th>
            Job Title
        </th>
        <th>
            Salary (MIN)
        </th>
        <th>
            Salary (MAX)
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr class="active" data-id=@item.job_id >
            <td>
                @Html.DisplayFor(modelItem => item.job_title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.min_salary)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.max_salary)
            </td>
        </tr>
    }

</table>
