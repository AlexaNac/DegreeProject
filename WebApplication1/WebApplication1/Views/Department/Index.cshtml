@model IEnumerable<WebApplication1.Models.department>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    <h2>Index</h2>
    @*<div style="float:right; display:inline-block">
        <div class="glyphicon glyphicon-plus addNew gi-2x" data-type="Department"></div>
    </div>*@
</div>
<table class="table table-striped table-hover click" data-type="Department">
    <tr class="success">
        <th>
            Department name
        </th>
        <th>
            Manager's last name
        </th>
    </tr>

@foreach (var item in Model) {
    <tr class="active" data-id=@item.department_id>
        <td>
            @Html.DisplayFor(modelItem => item.department_name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.employee.last_name)
        </td>
    </tr>
}

</table>
